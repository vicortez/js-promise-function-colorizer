{
  "name": "js-promise-function-colorizer",
  "displayName": "JavaScript Promise Function Colorizer",
  "description": "Highlights JavaScript/TypeScript functions that return promises with a custom color.",
  "version": "0.6.0",
  "publisher": "cortezdev",
  "author": {
    "name": "Victor Cortez",
    "email": "cortezdevpubli@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vicortez/js-promise-function-colorizer"
  },
  "bugs": {
    "url": "https://github.com/vicortez/js-promise-function-colorizer/issues"
  },
  "homepage": "https://github.com/vicortez/js-promise-function-colorizer#readme",
  "galleryBanner": {
    "color": "#af89e9",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "promise",
    "async",
    "javascript",
    "typescript",
    "syntax highlighting",
    "colorizer",
    "semantic tokens"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Promise Function Colorizer",
      "properties": {
        "promiseColorizer.color": {
          "type": "string",
          "format": "color",
          "default": "#af89e9",
          "description": "The color to use for functions that return a Promise. This must be a hex color code."
        }
      }
    },
    "semanticTokenTypes": [
      {
        "id": "promiseFunction",
        "description": "A function that returns a Promise."
      }
    ],
    "semanticTokenModifiers": []
  },
  "extensionDependencies": [
    "vscode.typescript-language-features"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-electron": "^2.3.8"
  }
}
